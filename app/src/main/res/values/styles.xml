<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionModeStyle">@style/AppActionBar</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="actionBarTheme">@style/AppActionBar</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:editTextColor">@color/iconColor</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTitle</item>
        <item name="background">@color/primaryColor</item>
        <item name="actionModeBackground">@color/primaryColor</item>
        <item name="actionModeCloseButtonStyle">@style/AppCloseButton</item>
        <item name="android:textColorSecondary">@color/iconColor</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/iconColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/iconColor</item>
    </style>

    <style name="AppFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/iconColor</item>
        <item name="backgroundTint">@color/accentColor</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>