<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppActionBar</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="actionBarTheme">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTitle</item>
        <item name="background">@color/primaryDarkColor</item>
        <item name="actionModeBackground">@color/primaryDarkColor</item>
        <item name="actionModeCloseButtonStyle">@style/AppCloseButton</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/primaryTextColor</item>
    </style>

</resources>