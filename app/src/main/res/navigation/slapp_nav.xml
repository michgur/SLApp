<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slapp_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.klmn.slapp.ui.home.HomeFragment"
        android:label="">
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createListFragment"
            app:destination="@id/createListFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.klmn.slapp.ui.list.ListFragment"
        android:label="ListFragment">
        <argument
            android:name="listId"
            app:argType="long" />
        <action
            android:id="@+id/action_listFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_listFragment_to_addUsersFragment"
            app:destination="@id/addUsersFragment" />
    </fragment>
    <fragment
        android:id="@+id/createListFragment"
        android:name="com.klmn.slapp.ui.create.CreateListFragment"
        android:label="CreateListFragment">
        <action
            android:id="@+id/action_createListFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/createListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addUsersFragment"
        android:name="com.klmn.slapp.ui.list.users.AddUsersFragment"
        android:label="AddUsersFragment">
        <argument
            android:name="listId"
            app:argType="long" />
    </fragment>
</navigation>